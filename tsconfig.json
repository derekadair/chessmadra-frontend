{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "jsx": "preserve",
    "strict": true,
    "types": ["solid-start/env"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "pages/*": ["./src/landing_page/pages/*"]
    }
  },
  "exclude": ["node_modules/**/*.ts", "src/stories", "knip.ts"]
}
